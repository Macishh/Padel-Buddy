<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/game_start_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Starttid:"
        android:layout_marginLeft="@dimen/margin_padding_size_medium"
        android:layout_marginTop="@dimen/margin_padding_size_medium"
        />

    <TimePicker
        android:id="@+id/timePicker1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner"
        android:layout_below="@+id/game_start_textview"
        />

    <TextView
        android:id="@+id/gametime_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speltid:"
        android:layout_toRightOf="@id/timePicker1"
        android:layout_marginLeft="@dimen/margin_padding_size_medium"
        android:layout_marginTop="@dimen/margin_padding_size_medium"
        />

    <RadioGroup
        android:id="@+id/length_radiogroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/timePicker1"
        android:layout_marginTop="@dimen/margin_padding_size_medium"
        android:layout_below="@+id/game_start_textview"
        >

        <RadioButton
            android:id="@+id/time60_radiobutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60 min"
            android:checked="true"
            />

        <RadioButton
            android:id="@+id/time90_radiobutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="90 min"
            />

    </RadioGroup>


</RelativeLayout>